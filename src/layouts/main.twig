<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <link rel="icon" type="image/svg+xml" href="/src/assets/favicon.svg"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Multi Step Form</title>
    <link rel="stylesheet" href="/src/screen.css">
    <link rel="stylesheet" href="/src/plan.css">
</head>
<body>
<main>
    <ul id="nav">
        <li class="{{ stepNumber == 1 ? 'active' }}">
            <a href="#">
                <b>1</b>
                <div>
                    <strong>Step 1</strong>
                    Your Info
                </div>
            </a>
        </li>
        <li class="{{ stepNumber == 2 ? 'active' }}">
            <a href="#">
                <b>2</b>
                <div>
                    <strong>Step 2</strong>
                    Select Plan
                </div>
            </a>
        </li>
        <li>
            <a href="#">
                <b>3</b>
                <div>
                    <strong>Step 3</strong>
                    Add-ons
                </div>
            </a>
        </li>
        <li>
            <a href="#">
                <b>4</b>
                <div>
                    <strong>Step 4</strong>
                    Summary
                </div>
            </a>
        </li>
    </ul>

    {% block card %}{% endblock %}

    <footer>
        <a href="/{{ prevStep }}" id="prevStep">Go Back</a>
        <a href="/{{ nextStep }}" id="nextStep">Next Step</a>
    </footer>
</main>
</body>
</html>
